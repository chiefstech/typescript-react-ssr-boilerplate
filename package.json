{
  "name": "typescript-react-ssr-boilerplate",
  "version": "0.5.0",
  "license": "MIT",
  "author": "thomasrogerlux@outlook.fr",
  "babel": {
    "presets": [
      "./config/babel-preset"
    ]
  },
  "scripts": {
    "build": "NODE_ENV=production node scripts/build.js",
    "start-dev": "NODE_ENV=development node scripts/start-dev.js",
    "xstart-dev": "NODE_ENV=development nodemon build/server.js",
    "start": "NODE_ENV=production node build/server.js",
    "precommit": "npx tsc --noEmit && lint-staged",
    "test": "NODE_ENV=development rm .babelrc & NODE_ENV=test yarn jest --config=config/jest/jest.config.js",
    "test:watch": "NODE_ENV=development rm .babelrc & NODE_ENV=test yarn jest --config=config/jest/jest.config.js --watch --json --outputFile=.jest-test-results.json || true",
    "test:debug": "NODE_ENV=development rm .babelrc & yarn -n=--inspect jest --runInBand --config=config/jest/jest.config.js --watch",
    "storybook": "NODE_ENV=development start-storybook -p 6006",
    "build-storybook": "NODE_ENV=production build-storybook"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "lint:fix",
      "git add"
    ],
    "*.{json,scss,sass,css,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "_moduleAliases": {
    "@cypress": "cypress",
    "@client": "src/client",
    "@server": "src/server",
    "@common": "src/common"
  },
  "dependencies": {
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@material-ui/core": "^3.1.1",
    "@reduxjs/toolkit": "^1.3.6",
    "babel-loader": "^8.1.0",
    "express": "^4.16.3",
    "module-alias": "^2.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-jss": "^8.6.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.4",
    "styled-components": "^5.1.1",
    "ua-parser-js": "^0.7.21"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@types/express": "^4.16.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^10.11.3",
    "@types/react": "16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-jss": "^8.6.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.0",
    "@types/ua-parser-js": "^0.7.33",
    "cypress": "^4.8.0",
    "husky": "^0.14.3",
    "jest": "^26.0.1",
    "jest-fetch-mock": "^2.1.2",
    "jest-localstorage-mock": "^2.4.0",
    "lint-staged": "^4.3.0",
    "moment": "^2.26.0",
    "nodemon": "^1.18.4",
    "react-docgen-typescript-loader": "^3.7.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.0.8",
    "webpack-node-externals": "^1.7.2"
  }
}
